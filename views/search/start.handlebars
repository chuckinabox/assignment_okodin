<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10 text-center">
      <h3>Searching for {{search.status}}
        {{#if search.gender}}
        "{{search.gender}}s"
        {{/if}}
         ages upto "{{search.age}}" years old</h3>
           <h3>
         {{#if search.locationDistance}}
         within "{{search.locationDistance}} miles" of "{{search.locationCity}}"
         {{/if}}
          with "{{search.pets}}"</h3>
      <h3>online within the last ""</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#">Basics</a></li>
        <li><a href="#">Appearance</a></li>
        <li><a href="#">Weapons</a></li>
        <li><a href="#">Availability</a></li>
        <li><a href="#">Occupation</a></li>
        <li><a href="#">Education</a></li>
        <li><a href="#">Children</a></li>
        <li><a href="#">Pets</a></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="nav" style="border:2px solid black;">
      <form action="/search" method="post">
        <div class="form-group col-sm-1 col-sm-offset-1">
          <label>Gender</label>
          <div class="radio">
            <label>
              <input type="radio" value="male" name="user[profile][gender]"> Male
            </label>
            <label>
              <input type="radio" value="female" name="user[profile][gender]"> Female
            </label>
            <label>
              <input type="radio" value="both" name="user[profile][gender]"> Both
            </label>
          </div>
        </div>
        <div class="form-group col-sm-1">
          <label for="user_age">Age Max</label>
          <select name="user[profile][age]" id="user_age" class="form-control">
            <option value="20">20</option>
            <option value="100">100</option>
            <option value="200">200</option>
            <option value="1000">1000</option>
          </select>
        </div>
        <div class="form-group col-sm-1">
          <label for="user_locationDistance">Distance Max</label>
          <select name="user[profile][locationDistance]" id="user_locationDistance" class="form-control">
            <option value="5">5 miles</option>
            <option value="20">20 miles</option>
            <option value="100">100 miles</option>
            <option value="1000">1000 miles</option>
          </select>
        </div>
        <div class="form-group col-sm-1">
          <label for="user_height">Height - Min</label>
          <select name="user[profile][heightMin]" id="user_height" class="form-control">
            <option value="0">Any</option>
            <option value="60">5'</option>
            <option value="66">5'6"</option>
            <option value="72">6' & up</option>
          </select>
        </div>
        <div class="form-group col-sm-1">
          <label for="user_height">Height - Max</label>
          <select name="user[profile][heightMax]" id="user_height" class="form-control">
            <option value="54">4'6"</option>
            <option value="60">5'</option>
            <option value="66">5'6"</option>
            <option value="72">6'</option>
            <option value="200">All</option>
          </select>
        </div>
        <div class="form-group col-sm-2">
          <label for="user_status">Status</label><br>
            <label><input type="checkbox" name="user[profile][status]" value="single">Single</label><br>
            <label><input type="checkbox" name="user[profile][status]" value="dating">Dating</label><br>
            <label><input type="checkbox" name="user[profile][status]" value="married">Married</label>
        </div>
        <div class="form-group col-sm-2">
          <label for="user_pets">Pets</label><br>
            <label><input type="checkbox" name="user[profile][pets]" value="Dogs">Dogs</label><br>
            <label><input type="checkbox" name="user[profile][pets]" value="Cats">Cats</label><br>
            <label><input type="checkbox" name="user[profile][pets]" value="Horses">Horses</label><br>
            <label><input type="checkbox" name="user[profile][pets]" value="Other">Other</label>
        </div>
        <div class="form-group col-sm-1">
          <a href="#"><button class="btn btn-default btn-primary" style="margin-top: 7em;">Search</button></a>
        </div>
      </div>
    </form>
  </div>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-10">
      <div class="dropdown" style="margin-top: 1em;">
        <button class="dropdown-toggle btn btn-default btn-lg btn-secondary" data-toggle="dropdown"><span class="caret"></span> Sort by <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a href="#">Distance</a></li>
          <li><a href="#">Age</a></li>
          <li><a href="#">Last login</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    {{#if users}}
      {{#each users as |user|}}
      <div class="col-xs-4 col-md-3 col-lg-2 col-xl-1 text-center" style="margin: 2em; border: 2px solid black">
        <a href="user/{{user.id}}"><img src={{user.Profile.image}} style="height:100%; width:100%; border-bottom: 2px solid black;">
        <p>{{user.username}}</p></a>
        <a href="#"><p>Like?</p></a>
      </div>
      {{/each}}
    {{else}}
      <div class="col-xs-12 text-center" style="margin: 2em; border: 2px solid black">
        <h2>No Results</h2>
      </div>
    {{/if}}
  </div>
</div>

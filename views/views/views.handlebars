<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 text-center" style="border-bottom:2px solid black; margin-top: -2em;">
      <h2>Views</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1" style="margin-top: 2em;">
      <ul class="nav nav-tabs">
        {{#if viewed}}
        <li ><a href="/views">They Viewed You</a></li>
        <li class="active"><a href="/views/youViewed">You Viewed Them</a></li>
        {{else}}
        <li class="active"><a href="/views">They Viewed You</a></li>
        <li ><a href="/views/youViewed">You Viewed Them</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1" style="border:2px solid black; padding:2em;">
      {{#if users}}
        {{#each users as |user|}}
        <div class="row" style="margin-top: 1em; margin-bottom: 1em;">
          <div class="col-sm-2">
            <a href="user/{{user.id}}"><img src="../{{user.Profile.image}}" style="height: 8em; width: 8em; border: 2px solid black;"></a>
          </div>
          <div class="col-sm-10">
            <a href="user/{{user.id}}"><h3>{{user.username}}</h3></a>
            <h5>{{user.Profile.age}} years old, live in "{{user.Profile.locationCity}}"</h5>
          </div>
        </div>
        {{/each}}
      {{else}}
      <h2>No Views Yet</h2>
      {{/if}}
    </div>
  </div>
</div>
